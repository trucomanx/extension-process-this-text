{
  "name": "process-this-text",
  "displayName": "Process This Text",
  "description": "An extension to process text and show diff",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:TrucomanX.processText",
    "onCommand:TrucomanX.replaceText"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "TrucomanX.processText",
        "title": "TrucomanX: Process Selected Text"
      },
      {
        "command": "TrucomanX.replaceText",
        "title": "TrucomanX: Replace this text"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Process This Text Configuration",
      "properties": {
        "processThisText.diffTool": {
          "type": "string",
          "default": "meld",
          "enum": [
            "meld",
            "xxdiff",
            "kdiff3",
            "diffuse"
          ],
          "description": "Choose the diff tool to use for comparing files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trucomanx/extension-process-this-text.git"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.2",
    "openai": "^4.58.1"
  }
}
